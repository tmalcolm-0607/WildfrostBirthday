// WildfrostBirthday/Items/Item_RejuvenationRune.cs
using WildfrostBirthday.Helpers;

namespace WildfrostBirthday.Items
{
    public static class Item_RejuvenationRune
    {
        public static void Register(WildFamilyMod mod)
        {
            var builder = new ItemDataBuilder(mod)
                .Create("Rejuvenation Rune", "RejuvenationRune")
                .SetSprites("items/rejuvenation_rune.png", "items/rejuvenation_rune_bg.png") // Adjust sprite paths as needed
                .WithItemType("Rune")
                .WithFlavour("A mystical rune that grants Rejuvenation.")
                .WithDescription("Applies 3 Rejuvenation.")
                .SubscribeToAfterAllBuildEvent(data =>
                {
                    data.effects = new ItemData.ItemEffect[]
                    {
                        new ItemData.ItemEffect
                        {
                            effectType = "ApplyStatusEffect",
                            effectParams = new object[] { "Rejuvenation", 3 }
                        }
                    };
                });
            mod.assets.Add(builder);
        }
    }
}